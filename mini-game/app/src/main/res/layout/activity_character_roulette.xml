<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cl_home2"
    tools:context=".Character_roulette_fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.widget.Button
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"

            android:background="@drawable/back" />
<!--
        <android.widget.Button
            android:id="@+id/volume"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="360dp"
            android:layout_marginTop="10dp"

            android:background="@drawable/volume" />
-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:paddingLeft="40dp"
            android:paddingTop="50dp" >

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bariol_bold"
                android:text="캐릭터 \n랜덤 선택"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <ImageView
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:contentDescription="@string/imageAccess"
                android:src="@drawable/refer_icon" />

        </LinearLayout>

        <EditText
           android:id="@+id/user_Id"
           android:layout_width="210dp"
           android:layout_height="45dp"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="150dp"
            android:textColor="@color/black"
            android:textAlignment="center"
           android:inputType="text"
           android:hint="닉네임을 입력해주세요!"
           android:textSize="20dp"
           android:textColorHint="@color/cl_font"
            android:textStyle="bold"/>


        <com.bluehomestudio.luckywheel.LuckyWheel
            android:id="@+id/roulette"
            android:layout_width="300dp"
            android:layout_height="300dp"

            android:layout_centerInParent="true" />

        <android.widget.Button
            android:id="@+id/spinButton"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@id/roulette"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"

            android:background="#FBCB39"

            android:text="START"
            android:textSize="35sp"
            android:textStyle="bold"/>

    </RelativeLayout>

</FrameLayout>