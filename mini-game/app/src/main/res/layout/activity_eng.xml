<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Eng_Activity"
    android:background="@color/cl_home2"

    >

    <android.widget.Button
        android:id="@+id/eng_back"
        android:layout_width="35dp"
        android:layout_height="35dp"

        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/back" />


    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="연습문제 \nSTART!"
        android:textSize="55sp"
        android:fontFamily="@font/font_straw"
        android:textAlignment="center"
        android:textColor="#D845C2BD"
        />
    <TextView
        android:id="@+id/totalCorrectTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/result_text_eng"
        android:layout_marginTop="15dp"
        android:text="정답 개수 : 0"
        android:textSize="28sp"
        android:textColor="@color/cl_font"
        android:fontFamily="@font/ramche"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/correctIncorrectTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/totalCorrectTextView"
        android:layout_marginTop="16dp"
        android:text="Correct/Incorrect"
        android:textSize="28sp"
        android:textColor="@color/cl_font"
        android:fontFamily="@font/font_straw"
        />

    <Button
        android:id="@+id/example1Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/correctIncorrectTextView"

        android:layout_marginTop="70dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/eng_selector"
        android:clickable="true"
        android:onClick="example1ButtonClicked"
        android:text="1. 상단의 단어를 보고"
        android:fontFamily="@font/font_straw"
        android:textSize="20dp"

        />

    <Button
        android:id="@+id/example2Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/example1Button"

        android:layout_marginTop="16dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/eng_selector"

        android:text="2. 정답이라고 생각되는"
        android:fontFamily="@font/font_straw"
        android:textSize="20dp"
        android:onClick="example2ButtonClicked"

        />

    <Button
        android:id="@+id/example3Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/example2Button"
        android:layout_marginTop="16dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/eng_selector"
        android:clickable="true"
        android:fontFamily="@font/font_straw"
        android:textSize="20dp"
        android:text="3. 보기를 클릭 하세요."
        android:onClick="example3ButtonClicked" />

    <Button
        android:id="@+id/example4Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/example3Button"
        android:layout_marginTop="16dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/eng_selector"
        android:clickable="true"
        android:fontFamily="@font/font_straw"
        android:textSize="20dp"
        android:text="4. 지금 바로시작!!!"
        android:onClick="example4ButtonClicked" />


    <!---->
    <TextView

        android:layout_below="@id/questionTextView"
        android:id="@+id/result_text_eng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="경과시간 : 00:00:00"
        android:textColor="@color/red"
        android:textSize="20dp"
        android:fontFamily="@font/font_eng"
        />

</RelativeLayout>